#include <dt-bindings/zmk/matrix_transform.h>
#include <physical_layouts.dtsi>

/ {
    chosen {
        zmk,kscan = &kscan0;
        zmk,matrix-transform = &default_transform;
    };

    kscan0: kscan {
        compatible = "zmk,kscan-gpio-charlieplex";
        wakeup-source;

        gpios
          = <&gpio0  3 GPIO_ACTIVE_HIGH>
          , <&gpio0 28 GPIO_ACTIVE_HIGH>
          , <&gpio0 29 GPIO_ACTIVE_HIGH>
          , <&gpio0  4 GPIO_ACTIVE_HIGH>
          , <&gpio0  5 GPIO_ACTIVE_HIGH>
          , <&gpio1 11 GPIO_ACTIVE_HIGH>
          ;
    };
    
    default_transform: matrix_transform {
        compatible = "zmk,matrix-transform";
        rows = <4>;
        columns = <14>;
        col-offset = <7>;
        map = <
            RC(5,0) RC(4,0) RC(3,0) RC(2,0) RC(1,0) RC(0,4)                RC( 6,11) RC( 6, 9) RC( 7, 9) RC( 8, 9) RC( 9,10) RC(10, 9) RC(11, 9)
            RC(5,1) RC(4,1) RC(3,1) RC(2,1) RC(1,4) RC(0,1)                RC( 6,11) RC( 6, 9) RC( 7, 9) RC( 8, 9) RC( 9,10) RC(10, 9) RC(11, 9)
            RC(5,2) RC(4,2) RC(3,2) RC(2,4) RC(1,2) RC(0,2) RC(5,4)        RC( 6,11) RC( 6, 9) RC( 7, 9) RC( 8, 9) RC( 9,10) RC(10, 9) RC(11, 9)
            RC(5,3) RC(4,3) RC(3,4) RC(2,3) RC(1,3) RC(0,3) RC(0,5)        RC( 6,11) RC( 6, 9) RC( 7, 9) RC( 8, 9) RC( 9,10) RC(10, 9) RC(11, 9)
        >;
    };
    
};